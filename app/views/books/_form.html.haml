= simple_form_for @book, :html => {:class => 'form-horizontal'} do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :price
    = f.association :buyer, :label_method => :email
    = f.association :seller, :label_method => :email

  .form-actions
    = f.button :submit, :class => 'btn-primary'
